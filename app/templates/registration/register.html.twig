<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>{% block title %}Projet Cloud-Campus{% endblock %}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests">

  {% block stylesheets %}
    {# Bootstrap #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="{{ asset('/oren/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.20.0/dist/bootstrap-table.min.css">
    {# End Bootstrap #}

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
    <link rel="stylesheet" type="text/css" href="{{ asset('CSS/layout_admin/header.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('CSS/security/registration.css') }}">

  {% endblock %}

</head>

<body>

    <header>

        <div class="header d-flex justify-content-between bg-light">

              <h1 class="h24">E-Commerce</h1>

              <a href="{{ path('home_customer') }}" class="btn btn-danger">Retour</a>

        </div>

  </header>

<main>

    <h1>S'inscrire</h1>

    {{ form_start(registrationForm, {'attr': {'class' : 'form-row col-10'}}) }}
        <div class="content">
            {{ form_label(registrationForm.name)}}
            {{ form_widget(registrationForm.name, {'attr' : {'class' : 'form-control'}})}}
            {{ form_errors(registrationForm.name, {'attr' : {'class' : 'invalid-feedback'}})}}
        </div>
        <div class="content">
            {{ form_label(registrationForm.firstname)}}
            {{ form_widget(registrationForm.firstname, {'attr' : {'class' : 'form-control'}})}}
            {{ form_errors(registrationForm.firstname, {'attr' : {'class' : 'invalid-feedback'}})}}
        </div>
        <div class="content">
            {{ form_label(registrationForm.address)}}
            {{ form_widget(registrationForm.address, {'attr' : {'class' : 'form-control'}})}}
            {{ form_errors(registrationForm.address, {'attr' : {'class' : 'invalid-feedback'}})}}
        </div>
        <div class="content">
            {{ form_label(registrationForm.additionalAddress)}}
            {{ form_widget(registrationForm.additionalAddress, {'attr' : {'class' : 'form-control'}})}}
            {{ form_errors(registrationForm.additionalAddress, {'attr' : {'class' : 'invalid-feedback'}})}}
        </div>
        <div class="content">
            {{ form_label(registrationForm.streetNumber)}}
            {{ form_widget(registrationForm.streetNumber, {'attr' : {'class' : 'form-control'}})}}
            {{ form_errors(registrationForm.streetNumber, {'attr' : {'class' : 'invalid-feedback'}})}}
        </div>
        <div class="content">
            {{ form_label(registrationForm.zipCode)}}
            {{ form_widget(registrationForm.zipCode, {'attr' : {'class' : 'form-control'}})}}
            {{ form_errors(registrationForm.zipCode, {'attr' : {'class' : 'invalid-feedback'}})}}
        </div>
        <div class="content">
            {{ form_label(registrationForm.city)}}
            {{ form_widget(registrationForm.city, {'attr' : {'class' : 'form-control'}})}}
            {{ form_errors(registrationForm.city, {'attr' : {'class' : 'invalid-feedback'}})}}
        </div>
        <div class="content">
            {{ form_label(registrationForm.country)}}
            {{ form_widget(registrationForm.country, {'attr' : {'class' : 'form-control'}})}}
            {{ form_errors(registrationForm.country, {'attr' : {'class' : 'invalid-feedback'}})}}
        </div>
        <div class="content">
            {{ form_label(registrationForm.email)}}
            {{ form_widget(registrationForm.email, {'attr' : {'class' : 'form-control'}})}}
            {{ form_errors(registrationForm.email, {'attr' : {'class' : 'invalid-feedback'}})}}
        </div>
        <div class="content">
            {{ form_label(registrationForm.plainPassword)}}
            {{ form_widget(registrationForm.plainPassword, {'attr' : {'class' : 'form-control'}})}}
            {{ form_errors(registrationForm.plainPassword, {'attr' : {'class' : 'invalid-feedback'}})}}
        </div>
        <div class="content">
            {{ form_label(registrationForm.agreeTerms)}}
            {{ form_widget(registrationForm.agreeTerms, {'attr' : {'class' : 'input-group-text'}})}}
            {{ form_errors(registrationForm.agreeTerms, {'attr' : {'class' : 'invalid-feedback'}})}}
        </div>

        <button type="submit" class="btn btn-success">S'inscrire</button>
    {{ form_end(registrationForm) }}

</main>

  {% block javascripts %}

    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/bootstrap-table@1.20.0/dist/bootstrap-table.min.js"></script>
    <!-- End Bootstrap -->

  {% endblock %}

</body>
</html>
                        <a class="delete btn btn-danger " href="#"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>

            </tbody>

        </table>
        <div class="form-size">
            <form class="col-2" action ="#" method="post" enctype="multipart/form-data">
                <div class="content">
                    <label>Créer une nouvelle taille:</label>
                    <div class="d-flex">
                        <input class="form-control" type="text" placeholder="Ajouter une nouvelle taille" id="size" name="size">
                        <button type="submit" class="btn btn-success">Valider</button> 
                    </div>
                </div>
            </form>
        </div>
        
    </div>


{% endblock %}
{% endblock %}

{% block content %}

    <div class="home_admin">

        <div class="header-common">
            <h1>Gestion des articles</h1>
            <button type="button" class="btn btn-primary">Créer un articles</button>
        </div>

        <table class="table text-center">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nom</th>
                    <th>Taille</th>
                    <th>Prix</th>
                    <th>Catégories</th>
                    <th>Supprimé ?</th>
                    <th>Quantité</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Article 1</td>
                    <td>M</td>
                    <td>12.80€</td>
                    <td><a href="#">Catégorie 1</a> - <a href="#">Catégorie 2</a></td>

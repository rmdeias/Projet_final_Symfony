{% extends 'Common/base.html.twig' %}

{% block content %}

    <div class="home_admin">

        <div class="header-common">
            <h1>Gestion des fournisseurs</h1>
            <a href="{{ path("admin_suppliers_new") }}" class="btn btn-primary">Créer un fournisseur</a>
        </div>

        <table class="table text-center">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nom</th>
                    <th>Supprimé ?</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for supplier in suppliers %}
                    <tr>
                        <td>{{ supplier.id }}</td>
                        <td>{{ supplier.libelle }}</td>
                        <td>{{ supplier.whenDeleted }}</td>
                        <td>
                            <a class="btn btn-info" href="{{ path('admin_suppliers_update', {id: supplier.id}) }}"><i class="fas fa-pen-fancy"></i></a>
                            <a class="delete btn btn-danger " href="{{ path('admin_suppliers_delete', {id: supplier.id}) }}"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>

        </table>

    </div>


{% endblock %}